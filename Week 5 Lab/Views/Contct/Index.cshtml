@model ContactModel
@{
    ViewBag.Title = "Contact Us";
}
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
    <h4 class="display-4">Mailing Address</h4>
    <p>1234 My Road, Columbus OH, 44516</p>
    <br />
    <h4 class="display-4">Call Us </h4>
    <p>(440)-123-1234</p>
    <br />
    <h4 class="display-4">Email</h4>
    <p>violetsloops@business.com</p>
    <br />
    <h4 class="display-4">Hours of operation</h4>
    <p>Monday - Friday 9AM to 4PM</p>
    <br />
 </div>
<div class="container">
    <header class="jumbotron">
        <h1 class="mt-3">@ViewBag.Title</h1>
    </header>
    <main>
        <form asp-action="Index" method="post" class="form-horizontal">
            <div class="row">
                <label asp-for="FirstName" class="control-label col-sm-3">
                    First Name:
                </label>
                    <input asp-for="FirstName"
                       class="form-control col-sm-3" />
                    <span asp-validation-for="FirstName"
                      class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="LastName"
                       class="control-label col-sm-3">
                        LastName:
                </label>
                    <input asp-for="LastName"
                       class="form-control col-sm-3" />
                    <span asp-validation-for="LastName"
                      class="text-danger col"></span>
            </div>
            <div class="row">
                    <label asp-for="Address"
                       class="control-label col-sm-3">
                        Address:
                </label>
                    <input asp-for="Address"
                       class="form-control col-sm-3" />
                    <span asp-validation-for="Address"
                      class="text-danger col"></span>
            </div>
                <div class="row">
                    <label asp-for="Phone"
                           class="control-label col-sm-3">
                        Phone:
                    </label>
                    <input asp-for="Phone"
                           class="form-control col-sm-3" />
                    <span asp-validation-for="Phone"
                          class="text-danger col"></span>
                </div>
                <div class="row">
                    <label asp-for="Email"
                           class="control-label col-sm-3">
                        Email:
                    </label>
                    <input asp-for="Email"
                           class="form-control col-sm-3" />
                    <span asp-validation-for="Email"
                          class="text-danger col"></span>
                </div>
                <div class="row">
                    <label asp-for="Message"
                           class="control-label col-sm-3">
                        Message:
                    </label>
                    <input asp-for="Message"
                           class="form-control col-sm-3" />
                    <span asp-validation-for="Message"
                          class="text-danger col"></span>
                </div>
            <div class="row">
                <label class="control-label col-sm-3">Future Value:</label>
                <input value="@ViewBag.FutureValue" readonly
                       class="form-control col-sm-3" />
            </div>
            <div class="row">
                <div class="col offset-sm-3 pl-0">
                    <button type="submit"
                            class="btn btn-primary">
                        Calculate
                    </button>
                    <a asp-action="Index"
                       class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>